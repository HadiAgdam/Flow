<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@color/surface"
    android:orientation="vertical"
    android:padding="8dp">


    <ImageView
        android:background="@color/white"
        android:id="@+id/image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop" />

    <ProgressBar
        android:layout_marginTop="12dp"
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/controlBox"
        android:layout_marginBottom="8dp"
        android:progress="50"
        android:progressDrawable="@drawable/notification_progressbar_drawable" />

    <RelativeLayout
        android:id="@+id/timeContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBar">

        <TextView
            android:id="@+id/progressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/durationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"
        android:layout_toStartOf="@+id/controlBox"
        android:layout_toEndOf="@+id/image"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Title place holder"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/controlBox"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/previousIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:foreground="?android:selectableItemBackground"
            android:scaleType="center"
            android:src="@drawable/previous_icon"
            android:tint="@color/white" />

        <ImageView
            android:id="@+id/pausePlayIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:foreground="?android:selectableItemBackground"
            android:scaleType="center"
            android:src="@drawable/play_icon"
            android:tint="@color/white" />

        <ImageView
            android:id="@+id/nextIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:foreground="?android:selectableItemBackground"
            android:scaleType="center"
            android:src="@drawable/next_icon"
            android:tint="@color/white" />

    </LinearLayout>


</RelativeLayout>